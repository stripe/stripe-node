{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": true,
    "types": [ "node" ]
  },
  "include": ["./src/**/*"]
}
